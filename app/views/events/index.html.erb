<div class="container">
    <h3 class="h3">Featured Events</h3>
    <div class="row">
      <% @events.each do |event| %>
        <div class="col-md-3 col-sm-6">
            <div class="product-grid2">
                <div class="product-image2">
                    <%= link_to event_path(event) do %>
                      <%= image_tag(event.image.to_s, class: "pic-1", style: "height: 250px") %>
                      <%= image_tag(event.alternate_image.to_s, class: "pic-2", style: "height: 250px") %>
                    <% end %>
                    <ul class="social">
                        <li><a href="<%=event_path(event)%>" data-tip="View"><i class="fa fa-eye"></i></a></li>
                    </ul>
                    <%=link_to 'Add to Cart', add_to_cart_path(event), method: :put, class: "add-to-cart"%>
                </div>
                <div class="product-content">
                    <h3 class="title">
                      <%=link_to event_path(event) do %>
                        <%=event.name%>
                      <% end %>
                    </h3>
                    <span class="price">UGX <%=event.price%></span>
                </div>
            </div>
        </div>
      <% end %>
    </div>
</div>
<hr>
